<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.Otrio"
        tools:targetApi="31">
        <activity
            android:name=".boardactivities.SinglePlayerBoardActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />
        <activity
            android:name=".boardactivities.TwoPlayerBoardActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />
        <activity
            android:name=".boardactivities.FourPlayerBoardActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />
        <activity
            android:name=".pages.InstructionsActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />
        <activity
            android:name=".pages.PlayActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />
        <activity
            android:name=".boardactivities.ThreePlayerBoardActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />

        <activity android:name=".pages.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Otrio.NoActionBar"
            />

        <activity
            android:name=".pages.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Otrio.NoActionBar"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>