    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <TextView
            android:id="@+id/playerTurn"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/turn_for"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/currentPiece"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/playerTurn"
            android:text="@string/picked"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pegText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_marginStart="5dp"
            android:text="@string/remain"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pegNumber"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_toEndOf="@+id/pegText"
            android:text="@string/_0"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_toEndOf="@+id/pegNumber"
            android:layout_marginStart="5dp"
            android:text="@string/remain1"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mediumNumber"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_toEndOf="@+id/mediumText"
            android:text="@string/_m0"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_toEndOf="@+id/mediumNumber"
            android:layout_marginStart="5dp"
