    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <TextView
            android:id="@+id/playerTurn"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Turn for:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/currentPiece"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/playerTurn"
            android:text="Picked:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pegText"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_below="@+id/playerTurn"
            android:layout_marginLeft="5dp"
            android:text="remain:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/pegNumber"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerTurn"
            android:layout_toRightOf="@+id/pegText"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
