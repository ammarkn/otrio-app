<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/otrio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otrio"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otrio_text"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:text="@string/greetings"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/go_to_play"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greeting_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/play"
        android:textSize="42sp"
        app:icon="@android:drawable/ic_media_play"/>

    <Button
        android:id="@+id/go_to_instructions"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_to_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="@string/instructionsMain"
        android:textSize="25sp"
        app:icon="@android:drawable/ic_dialog_info"/>

    <Button
        android:id="@+id/go_to_settings"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_to_instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/settings"
        android:textSize="25sp"
        app:icon="@drawable/baseline_settings_24" />

</RelativeLayout>
